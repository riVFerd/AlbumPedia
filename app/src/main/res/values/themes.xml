<resources>
    <!-- Base application theme. -->
    <style name="Theme.MusicPedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#90a4ae</item>
        <item name="colorPrimaryVariant">#62757f</item>
        <item name="colorOnPrimary">#c1d5e0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9fa8da</item>
        <item name="colorSecondaryVariant">#6f79a8</item>
        <item name="colorOnSecondary">#d1d9ff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="LabelText.MainText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>